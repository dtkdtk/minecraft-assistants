{
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js", "__PRIVATE__/transaction_chain.ts",
  ],
  "exclude": [
    "./node_modules/**/*",
    "dist/**/*",
    "__PRIVATE__/**/*"
  ],
  "compilerOptions": {
    "noEmit": false,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,

    "strict": true,
    "resolveJsonModule": true,
    "rootDir": "./src/",
    "outDir": "./dist/",

    "removeComments": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": ["ESNext"],
  }
}