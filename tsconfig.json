{
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js"
  ],
  "exclude": [
    "./node_modules/**/*",
    "dist/**/*"
  ],
  "compilerOptions": {
    "noEmit": false,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,

    "strict": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "strictBuiltinIteratorReturn": true,
    "strictFunctionTypes": true,
    "rootDir": "./src/",
    "outDir": "./dist/",

    "resolveJsonModule": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": ["ESNext"],
    "types": ["./types.d.ts"]
  }
}