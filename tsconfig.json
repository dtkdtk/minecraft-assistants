{
  "include": [
    "./**/*.js",
    "./**/*.d.ts"
  ],
  "exclude": [
    "./node_modules/**/*"
  ],
  "compilerOptions": {
    "noEmit": true,
    "noCheck": false,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,

    "strict": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "strictBuiltinIteratorReturn": true,
    "strictFunctionTypes": true,

    "resolveJsonModule": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": ["ESNext"],
    "types": ["./types.d.ts"]
  }
}